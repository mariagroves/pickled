<div class="container" id="index-container">
  <% @posts.each_with_index do |post, index| %>
  <%= link_to post_path(post), class: "" do  %>
  <% if index % 2 == 0 %>
   <div class="row" style="background-color: #EBEBEB;">
  <% else%>
   <div class="row" style="background-color: #DCDCDC;">
  <% end %>
    <div class="col">
      <div class="card-index">
        <div class="card-index-info">
          <div class="card-title">
            <%= post.title %>
          </div>
          <div class="card-index-cta">
            <div class="card-username"> <p>@<%= current_user.username %></p></div>
            <div class="card-readmore small-button "> <p> Read more </p></div>
          </div>
        </div>
        <div class="card-index-category-bar">
          <% post.categories.each do |category, index| %>
            <% if index == 0 %>
            <div class="small-button-fill" style="background-color: <%= category.color %>">
              <%= category.name %>
            </div>
            <% else %>
            <div class="small-button-fill category-button" style="background-color: <%= category.color %>">
              <%= category.name %>
            </div>
            <% end %>
          <% end %>
        </div>
        <% if post.kind == "photo" %>
          <%= render 'shared/index-photo-card', post: post %>
        <% else %>
          <%= render 'shared/index-text-card', post: post %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>



