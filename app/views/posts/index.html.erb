<div class="container">
  <div class="row">
    <div class="col-md-6 offset-sm-4">
      <h1>Browse the Posts</h1>
      <br>
        <% @posts.each do |post| %>
            <h3><%= link_to post.title, post_path(post)%></h3>
            <p><% post.description %></p>
            <%= link_to "Delete", post_path(post),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        <% end %>
        <br>
        <p><%= link_to "+ Add a new Post",  new_post_path, class: "btn btn-success"%></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <% @posts.each do |post| %>
        <%= link_to post_path(post), class: "" do  %>
          <div class="card-index">
            <div class="card-index-info card-post-extra">
              <div class="card-title">
                <%= post.title %>
              </div>
              <div class="card-index-cta">
                <div class="card-username"> @<%= post.user.email.split("@").first %></div>
                <div class="card-readmore small-button "> Read more</div>
                <div class="card-category small-button-fill"> <%= post.title %></div>
              </div>
            </div>
            <div class="card-index-images">
              <div class="card-option">
                <div class="card-option-image">
                </div>
                <div class="card-option-button">
                </div>
                <div class="card-option-image">
                  <% if post.kind == "photo" %>
                    <% post.post_options.each do |option| %>
                      <%= link_to post_post_option_post_votes_path(post, option), method: :post do %>
                        <%= cl_image_tag option.image.url(:showsmall) %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <% post.post_options.each do |option| %>
                      <%= link_to option.content, post_post_option_post_votes_path(post, option), method: :post %>
                    <% end %>
                  <% end %>
                </div>
                <div class="card-option-button">
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
