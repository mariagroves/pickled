<div class="container">
  <div class="row">
    <div class="col-md-6 offset-sm-4">
      <h2><%= @post.title %></h2>
      <p><%= @post.description %></p>
      <% if @post.kind == "photo" %>
        <% @post.post_options.each do |option| %>
          <%= link_to post_post_option_post_votes_path(@post, option), method: :post do %>
            <%= cl_image_tag option.image.url(:showsmall) %>
          <% end %>
        <% end %>
      <% else %>
        <% @post.post_options.each do |option| %>
          <%= link_to option.content, post_post_option_post_votes_path(@post, option), method: :post %>
        <% end %>
      <% end %>
      <p><%= link_to "Edit the Post", edit_post_path %></p>
      <%= link_to "Back to list", posts_path %>
    </div>
  </div>
</div>


