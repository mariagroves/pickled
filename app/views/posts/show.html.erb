<div class="container">
  <div class="row">
    <div class="col-md-6 offset-sm-4">
      <section class="content">
        <h2><%= @post.title %></h2>
          <p><%= @post.description %></p>
            <% if @post.kind == 'photo' %>
              <div class="cards">
                <% @post.post_options.each do |option| %>
                  <%= render 'shared/image_card', post: @post, option: option %>
                <% end %>
              </div>
            <% else %>
              <div class="cards">
                <% @post.post_options.each do |option| %>
                  <%= render 'shared/content_card', post: @post, option: option %>
                <% end %>
              </div>
            <% end %>
      </section>
      <h3>Comments</h3>
        <% if @post.comments.empty? %>
          <p id="message">There are no comments for this post!</p>
        <% else %>
          <% @post.comments.each do |comment| %>
              <%= render 'comments/show', comment: comment %>
          <% end %>
        <% end %>
        <%= render 'comments/form', post: @post, comment: Comment.new %>
    </div>
  </div>
</div>


