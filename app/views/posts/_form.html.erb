<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <%= simple_form_for(@post) do |f| %>
        <% if @post.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :title, label: "What's your pickle?"  %>
        <%= f.input :description,label: 'Describe it'  %>
        <%= f.input :kind, label: 'What kind of post is this?', :collection => %w[text photo] %>
          <%= f.simple_fields_for :post_options do |p| %>
            <%= p.input :content, :as => :string, label: 'First option'%>
            <%= p.input :image, label: 'First option' %>
            <%= p.input :image_cache, as: :hidden %>
          <% end %>
          <%= f.simple_fields_for :post_options do |p| %>
            <%= p.input :content, :as => :string, label: 'Second option' %>
            <%= p.input :image, label: 'Second option' %>
            <%= p.input :image_cache, as: :hidden %>
          <% end %>
        <%= f.submit "Share" %>
      <% end %>
    </div>
  </div>
</div>


