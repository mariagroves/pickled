<div id="comment-<%=comment.id %>" class="comments-text" >
  <p class="comments-username">@<%= comment.user.username %></p>
  <p> <%= comment.content %> </p>
   <% if comment.user == current_user %>
    <%= link_to post_comment_path(comment.post, comment),
        method: :delete,
        remote: true,
        data: { confirm: "Are you sure?" } do %>
      <p class="comments-delete">Delete</p>
    <% end %>
  <% end %>
</div>
