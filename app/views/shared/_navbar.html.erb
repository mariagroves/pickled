
<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-container-line">
    <div class="navbar-container">
      <%= link_to posts_path do %>
        <div class="pickled-logo">
          PICKLED
        </div>
      <% end %>
          <% if params["controller"] == "posts" && params["action"] == "index" %>
            <div class="navbar-buttons">
              <div class="dropdown show">
                <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  All Categories
                </button>
                <div class="dropdown-menu dropdown-menu-center" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item big-button-dropdown" style="background-color:#EE5746;" href="#">Lifestyle</a>
                  <a class="dropdown-item big-button-dropdown" style="background-color:#FBE462" href="#">Food</a>
                  <a class="dropdown-item big-button-dropdown" style="background-color:#5EBB8E;" href="#">Gaming</a>
                  <a class="dropdown-item big-button-dropdown" style="background-color:#B684FD;" href="#">Furniture</a>
                </div>
              </div>

              <div class="dropdown show">
                <button class="dropdown-toggle dropdown-filter" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <svg width="14" height="13" viewBox="0 0 14 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M14 2H0V1H14V2ZM14 7H0V6H14V7ZM14 12H0V11H14V12Z" fill="black"/>
                    <path d="M12 1.5C12 2.32843 11.3284 3 10.5 3C9.67157 3 9 2.32843 9 1.5C9 0.671573 9.67157 0 10.5 0C11.3284 0 12 0.671573 12 1.5Z" fill="black"/>
                    <path d="M6 6.5C6 7.32843 5.32843 8 4.5 8C3.67157 8 3 7.32843 3 6.5C3 5.67157 3.67157 5 4.5 5C5.32843 5 6 5.67157 6 6.5Z" fill="black"/>
                    <path d="M12 11.5C12 12.3284 11.3284 13 10.5 13C9.67157 13 9 12.3284 9 11.5C9 10.6716 9.67157 10 10.5 10C11.3284 10 12 10.6716 12 11.5Z" fill="black"/>
                  </svg>
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item big-button-dropdown" style="background-color:white; color:black" href="#">Recent</a>
                  <a class="dropdown-item big-button-dropdown" style="background-color:white; color:black" href="#">Best</a>
                </div>
              </div>
            </div>

          <% elsif params["controller"] == "posts" && params["action"] == "show" %>
            <%= link_to edit_post_path(@post) do %>
              <div class="navbar-buttons">
                <div class="big-button-fill" style="background-color: black; color:white">
                  Edit pickle
                </div>
              </div>
            <% end %>

          <% elsif params["controller"] == "posts" && params["action"] == "edit" %>
              <div class="navbar-buttons">
                  <%= link_to "Back", post_path(@post), class: "big-button-navbar-black" %>
              </div>

          <% elsif params["controller"] == "pages" && params["action"] == "dashboard" %>
              <div class="navbar-buttons">
                <%= link_to "Edit Profile", edit_user_registration_path, class: "big-button-navbar-black" %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "big-button-navbar-white" %>
            </div>

          <% elsif params["controller"] == "devise/registrations" && params["action"] == "edit" %>
              <div class="navbar-buttons">
                <%= link_to "Back", dashboard_path, class: "big-button-navbar-black" %>
            </div>

          <% end %>
    </div>
    <div class="navbar-line"></div>
  </div>
</div>

